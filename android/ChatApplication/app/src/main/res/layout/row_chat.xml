<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <TextView
        android:visibility="invisible"
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:text="@string/label_nama"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:visibility="invisible"
        android:id="@+id/pembatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/nama"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:text="@string/label_pembatas"
        android:textSize="16sp">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/biru"
        app:layout_constraintStart_toStartOf="@+id/pembatas"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/label_pesan"
            android:textColor="@color/white"
            android:textSize="16sp">
        </TextView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_waktu"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/card_left"
        app:layout_constraintStart_toStartOf="@+id/pembatas"
        android:textSize="11sp">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>